<section class="customer-account-area">
    <div class="container">
        <h1>Your Account</h1>
        <div class="flex-grid">
            <div class="col col-8 info">
                <table>
                    <thead>
                        <tr>
                            <th>Order</th>
                            <th>Date</th>
                            <th>Payment Status</th>
                            <th>Fulfillment Status</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in customer.orders %}
                            <tr>
                                <td>#{{ order.id }}</td>
                                <td>{{ order.created_at | date: "%B %-d, %Y" }}</td>
                                <td>{{ order.financial_status }}</td>
                                <td>{{ order.fulfillment_status }}</td>
                                <td>{{ order.subtotal_price | money }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col col-4 sidebar">
                <p class="name">{{ customer.name }}</p>
                <p>Customer ID: {{ customer.id }}</p>
                <p>{{ customer.email }}</p>
                {% for address in customer.addresses %}
                    <p>{{ address.street }}</p>
                {% endfor %}
                {% if customer.total_spent > 0 %}
                    <p>Hi {{ customer.first_name }}, in total you've spent {{ customer.total_spent | money }} with us! Amazing!</p>
                {% endif %}
                <a href="/account/logout" class="btn btn-primary">Logout</a>
            </div>
        </div>
    </div>
</section>