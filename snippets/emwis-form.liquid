<div class="modal-container">
    <div class="dark-area"></div>
    <div id="emwis-modal">
        <div class="modal-header">
            <h3>Stock Notification</h3>
            <span class="close-modal">
                <i class="fas fa-times"></i>
            </span>
        </div>
        <div class="modal-content">
            <p>After submitting your email address, you'll receive an email when {{ product.title }} <span class="variant">[product-name]</span> is back in stock</p>
            {% assign today =  "today" | date: "%Y-%m-%d" %}
            {% assign hmac = today | append: ":" | append: shop.permanent_domain | hmac_sha256: "b6916832e1c9e32a920ef9372ec482d5" %}
            <input type="hidden" id="emwis-hmac" name="hmac" value="{{ hmac }}" />
            <div class="input-row">
                <label for="emwis-email-address">Your Email Address</label>
                <input type="email" id="emwis-email-address" />
            </div>
            <div class="input-row">
                <label class="newsletter-checkbox"><input type="checkbox" id="emwis-newletter" name="emwis-newsletter" /> Join email newsletter - Be Informed of new stock, sales etc.</label>
            </div>
            <div class="input-row">
                <span class="error"></span>
                <span class="success"></span>
                <button  name="add" id="emwis-submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="block-loader">
                <div class="loader">
                    <div class="loader-bar"></div>
                    <div class="loader-bar"></div>
                    <div class="loader-bar"></div>
                    <div class="loader-bar"></div>
			    </div>
            </div>
        </div>
    </div>
</div>