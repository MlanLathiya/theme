<div class="banner twocolumn {{ block.settings.custom_class }} {{ block.settings.add_padding_top }} {{ block.settings.add_padding_bottom }} {{ block.settings.add_margin_top }} {{ block.settings.add_margin_bottom }} {{ block.settings.add_border_top }} {{ block.settings.add_border_bottom }} {{ block.settings.border_width }}" {% if block.settings.background_color != '' %}style="background-color: {{ block.settings.background_color }}"{% endif %}>
    <div class="wrapper {{ block.settings.max_width }}">
        <div class="row">
            <div class="col-wide-6 col-img {{ block.settings.text_color_1 | escape }}">
                <div class="inner">
                    {% if block.settings.link_1 != blank %}<a class="img" href="{{ block.settings.link_1 }}">{% endif %}	
                    {% if block.settings.image_1 %}
                        <picture>
                            <source media="(min-width: 1024px)" srcset="{{ block.settings.image_1 | img_url: '1920x' }}">
                            <source media="(min-width: 768px)" srcset="{{ block.settings.image_1 | img_url: '1024x600', crop: 'center' }}">
                            {% if block.settings.mobile_image_1 != blank %}
                                <source srcset="{{ block.settings.mobile_image_1 | img_url: 'master' }}">
                            {% else %}
                                <source srcset="{{ block.settings.image_1 | img_url: '640x480', crop: 'center' }}">
                            {% endif %}
                            <img src="{{ block.settings.image_1 | img_url: '1920x' }}" alt="" />
                        </picture>
                    {% else %}
                        <span class="placeholder-background">
                            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                        </span>
                    {% endif %}
                    {% if block.settings.link_1 != blank %}</a>{% endif %}
                    {% if block.settings.title_1 != blank or block.settings.content_1 != blank or block.settings.link_1_a != blank or block.settings.link_1_b != blank %}
                        <div class="caption {{ block.settings.content_position_1 }} {{ block.settings.vertical_align_1 }} {{ block.settings.horizontal_align_1 }}">	
                            <div class="wrapper">
                                <div class="content">
                                    {% if block.settings.title_1 != blank %}
                                        <{{ block.settings.title_tag_1 }} class="title">{{ block.settings.title_1 }}</{{ block.settings.title_tag_1 }}>
                                    {% endif %}
                                    {% if block.settings.content_1 != blank %}
                                        <div class="text">{{ block.settings.content_1 }}</div>
                                    {% endif %}
                                    {% if block.settings.link_1_a != blank or block.settings.link_1_b != blank %}
                                    <div class="buttons {{ block.settings.button_position_1 }}">
                                        {% if block.settings.link_1_a != blank %}
                                            <a class="button" href="{{ block.settings.link_1_a }}">{{ block.settings.button_text_1_a }}</a>
                                        {% endif %}	
                                        {% if block.settings.link_1_b != blank %}
                                            <a class="button" href="{{ block.settings.link_1_b }}">{{ block.settings.button_text_1_b }}</a>
                                        {% endif %}	
                                    </div>
                                    {% endif %}	
                                </div>
                            </div>
                        </div>
                    {% endif %}	
                </div>
            </div>
            <div class="col-wide-6 col-img {{ block.settings.text_color_2 | escape }}">
                <div class="inner">
                    {% if block.settings.link_2 != blank %}<a class="img" href="{{ block.settings.link_2 }}">{% endif %}	
                    {% if block.settings.image_2 %}
                        <picture>
                            <source media="(min-width: 1024px)" srcset="{{ block.settings.image_2 | img_url: '1920x' }}">
                            <source media="(min-width: 768px)" srcset="{{ block.settings.image_2 | img_url: '1024x600', crop: 'center' }}">
                            {% if block.settings.mobile_image_2 != blank %}
                                <source srcset="{{ block.settings.mobile_image_2 | img_url: 'master' }}">
                            {% else %}
                                <source srcset="{{ block.settings.image_2 | img_url: '640x480', crop: 'center' }}">
                            {% endif %}
                            <img src="{{ block.settings.image_2 | img_url: '1920x' }}" alt="" />
                        </picture>
                    {% else %}
                        <span class="placeholder-background">
                            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                        </span>
                    {% endif %}
                    {% if block.settings.link_2 != blank %}</a>{% endif %}
                    {% if block.settings.title_2 != blank or block.settings.content_2 != blank or block.settings.link_2_a != blank or block.settings.link_2_b != blank %}
                        <div class="caption {{ block.settings.content_position_2 }} {{ block.settings.vertical_align_2 }} {{ block.settings.horizontal_align_2 }}">	
                            <div class="wrapper">
                                <div class="content">
                                    {% if block.settings.title_2 != blank %}
                                        <{{ block.settings.title_tag_2 }} class="title">{{ block.settings.title_2 }}</{{ block.settings.title_tag_2 }}>
                                    {% endif %}
                                    {% if block.settings.content_2 != blank %}
                                        <div class="text">{{ block.settings.content_2 }}</div>
                                    {% endif %}
                                    {% if block.settings.link_2_a != blank or block.settings.link_2_b != blank %}
                                    <div class="buttons {{ block.settings.button_position_2 }}">
                                        {% if block.settings.link_2_a != blank %}
                                            <a class="button" href="{{ block.settings.link_2_a }}">{{ block.settings.button_text_2_a }}</a>
                                        {% endif %}	
                                        {% if block.settings.link_2_b != blank %}
                                            <a class="button" href="{{ block.settings.link_2_b }}">{{ block.settings.button_text_2_b }}</a>
                                        {% endif %}	
                                    </div>
                                    {% endif %}	
                                </div>
                            </div>
                        </div>
                    {% endif %}	
                </div>
            </div>
        </div>
    </div>
</div>